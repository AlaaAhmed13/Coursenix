    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <div class="logo">
                    <img src="/assets/logo.svg" alt="">
                </div>
                <div>
                    <span class="word">Coursenix</span>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index", "Home")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href=@Url.Action("Index", "Courses")>Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">About</a>
                    </li>
                </ul>
                
                 
                    <ul class="navbar-nav ms-auto">

                       
                        @if(User.Identity.IsAuthenticated)
                        {
                            var name = User.FindFirst("FullName")?.Value;

                            <li class="user-profile" id="userProfile">
                                <span class="username"> @name </span>
                                <div class="user-icon"> @char.ToUpper(name[0]) </div>
                                <!-- User Dropdown Menu -->
                                <div class="dropdown-menu" id="userDropdown">
                                    <ul>
                                        <li><a href=@Url.Action("Dashboard", "Student")><i class="fas fa-book"></i> Dashboard</a></li>
                                        <li><a href=@Url.Action("Settings", "Student")><i class="fas fa-cog"></i> Settings</a></li>
                                        <li class="divider-menu"></li>
                                        <li><a href=@Url.Action("Logout", "Account") class="logout-link"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                        else 
                        {
                             <li class="sign-in-container">
                                <a href=@Url.Action("Login", "Account") class="btn sign-in-btn">Sign in</a>
                            </li>
                        }
                        
                    </ul>
                
            </div>
         
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1>Your Journey to Excellence Starts Here!</h1>
                <h2 class="highlight">Join Coursenix Now</h2>
                <p>
                    Find, book, and manage your courses online with our easy-to-use
                    platform. Join thousands of students and teachers who are already
                    enjoying the benefits of Coursenix.
                </p>
                <a href="#path" class="btn cta-btn">Join now →</a>
            </div>
            <div class="hero-image">
                <div class="hero-background">
                    <img src="~/assets/circular-background2.svg"
                         alt=""
                         class="hero-bg-img" />
                </div>
                <div class="image-stack">
                    <!-- <div class="arc"></div> -->
                    <div class="student student-left">
                        <img src="~/assets/student-left.svg"
                             alt="Student with books"
                             class="pill pill-1" />
                    </div>
                    <div class="student student-middle">
                        <img src="~/assets/student-middle.svg"
                             alt="Student with headphones"
                             class="pill pill-2" />
                    </div>
                    <div class="student student-right">
                        <img src="~/assets/student-right.svg"
                             alt="Student with notebooks"
                             class="pill pill-3" />
                    </div>
                </div>
            </div>
        </div>
        <img src="assets/decoration1.svg"
             alt=""
             class="decoration decoration-1" />
    </section>
    <!-- Choose Your Path Section -->
    <section class="path-selection" id="path">
        <img src="~/assets/Arrow1.svg" alt="" class="decoration decoration-1" />
        <div class="container">
            <h2 class="section-title">Choose Your Path</h2>
            <p class="section-description">
                Whether you're looking to learn or teach, we've got you covered
            </p>

            <div class="paths">
                <div class="path-card">
                    <div class="path-icon">
                        <img src="~/assets/student.svg" alt="Student icon" />
                    </div>
                    <h3>Student</h3>
                    <p>
                        Find courses, access study materials, and manage your learning
                        schedule all in one place
                    </p>
                    <a href="@Url.Action("StudentRegister", "Account")" class="btn path-btn">Get started</a>
                </div>

                <div class="path-card">
                    <div class="path-icon">
                        <img src="~/assets/teacher.svg" alt="Teacher icon" />
                    </div>
                    <h3>Teacher</h3>
                    <p>
                        Offer your courses, manage class schedules, and track attendance
                        with our intuitive tools
                    </p>
                    <a href="@Url.Action("TeacherRegister", "Account")" class="btn path-btn">Get started</a>
                </div>
            </div>
        </div>
        <img src="~/assets/lamp.svg" alt="" class="decoration decoration-2" />
    </section>
    <script src="~/js/profile-drop-down.js"></script>

 
