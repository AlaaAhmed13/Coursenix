@model Coursenix.Models.ViewModels.SessionAttendanceViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="../CSS/session_attendance.css">
</head>
<body>
    <main class="container my-5">
        <form asp-action="TakeAttendance" method="post">
            <input type="hidden" asp-for="SessionId" />
            <input type="hidden" asp-for="GroupId" />

            <div class="attendance-wrapper bg-white p-4 rounded shadow-sm">
                <h3 class="mb-4">Session Attendance</h3>

                <!-- Group Info -->
                <div class="group-info mb-4">
                    <h5 class="text-secondary mb-2">Group: @Model.GroupName</h5>
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <p class="mb-0"><i class="bi bi-calendar-week text-muted me-2"></i> @Model.SessionDateTime.ToString("dddd")</p>
                        </div>
                        <div class="col-md-10 mb-3">
                            <p class="mb-0"><i class="bi bi-clock text-muted me-2"></i> @Model.SessionDateTime.ToString("h:mm tt")</p>
                        </div>
                    </div>
                </div>

                <!-- Date Selection -->
                <div class="mb-4">
                    <label for="SessionDateTime" class="form-label">Date Of Session</label>
                    <input type="date" class="form-control" asp-for="SessionDateTime" />
                </div>

                <!-- Search Box (optional, no backend logic) -->
                <div class="mb-4">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" class="form-control search-input" placeholder="Search Student..">
                    </div>
                </div>

                <!-- Students Table -->
                <div class="table-responsive">
                    <table class="table table-hover" id="attendanceTable">
                        <thead class="table-light">
                            <tr>
                                <th>Student Name</th>
                                <th class="text-center">Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Students.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Model.Students[i].StudentFullName
                                        <input type="hidden" name="Students[@i].StudentId" value="@Model.Students[i].StudentId" />
                                        <input type="hidden" name="Students[@i].StudentFullName" value="@Model.Students[i].StudentFullName" />
                                    </td>
                                    <td class="text-center">
                                        <div class="form-check d-inline-block">
                                            <input class="form-check-input attendance-check"
                                                   type="checkbox"
                                                   name="Students[@i].IsPresent"
                                                   value="true" />
                                            <input type="hidden" name="Students[@i].IsPresent" value="false" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="SessionList" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </main>

  

</body>
</html>