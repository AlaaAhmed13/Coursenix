 @model LoginViewModel

 @section css{
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome for the eye icon -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/sign-in.css" />
 }


    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <div class="logo">
                    <img src="~/assets/logo.svg" alt="" />
                </div>
                <div>
                    <span class="word">Coursenix</span>
                </div>
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end"
                 id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Home", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Courses")">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   
    @* Login Form  *@
    <div class="container">
        <div class="login-container">
            <h2 class="text-center mb-4">Welcome Back!</h2>
            <p class="text-center text-muted mb-4">
                Enter your credentials to access your account
            </p>

            <div asp-validation-summary="All" class="text-danger"></div>



            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="mb-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input remove-shadow"
                               type="radio"
                               asp-for="Role"
                               value="Student"
                               checked />
                        <label class="form-check-label" for="studentRadio">I'm a Student</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input remove-shadow"
                               type="radio"
                               asp-for="Role"
                               value="Teacher" />
                        <label class="form-check-label" for="teacherRadio">I'm a Teacher</label>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Email"
                           class="form-control form-control-lg remove-shadow"
                           placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password"
                           class="form-control form-control-lg remove-shadow"
                           placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mb-4">
                    <div class="form-check">
                        <input class="form-check-input remove-shadow"
                               type="checkbox"
                               id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <div class="form-text">
                        <a href="@Url.Action("ForgetPass", "Password")">Forgot password?</a>
                    </div>
                </div>

                <button type="submit" class="btn submit btn-lg w-100">Sign in</button>

                <div class="text-center mt-3">
                    <span class="form-text">No account? <a href="@Url.Action("Home", "Home")">Sign up</a></span>
                </div>
            </form>

            <div class="or-divider">
                <span>or</span>
            </div>

            <div class="social-login">
                <button class="btn btn-google" type="button">
                    <img src="~/assets/google-icon.jpg"
                         alt="Google"
                         class="social-icon" />
                    sign in
                </button>
                <button class="btn btn-facebook" type="button">
                    <img src="~/assets/facebook-icon2.png"
                         alt="Facebook"
                         class="social-icon" />
                    sign in
                </button>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
         <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    }

