@model Coursenix.Models.ViewModels.TeacherSignUpViewModel

@{
    ViewData["Title"] = "Teacher Sign Up"; 
}

@section css {

        <link rel="stylesheet" href="@Url.Content("~/CSS/sign-up.css")">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

<main>
    <div class="form-container">
        <h1>Start your journey</h1>
        <p class="subtitle">Create your teacher account</p>

        <form asp-controller="Teacher" asp-action="SignUp" method="post" id="signup-form" novalidate>
            <input type="hidden" asp-antiforgery="true" />

            <div asp-validation-summary="All" class="text-danger mb-4"></div>

            <div class="form-group">
                <input type="text" asp-for="FullName" placeholder="Full name" required minlength="3" />
                <span asp-validation-for="FullName" class="error-message"></span>
            </div>

            <div class="form-group">
                <input type="email" asp-for="Email" placeholder="Email address" required />
                <span asp-validation-for="Email" class="error-message"></span> 
            </div>

            <div class="form-group">
                <input type="tel" asp-for="PhoneNumber" placeholder="Phone number" required />
                <span asp-validation-for="PhoneNumber" class="error-message"></span>
            </div>
            <div class="form-group password-group">
                <input type="password" asp-for="Password" placeholder="Create a password" required minlength="8" />
                <i class="far fa-eye-slash toggle-password" data-target="Password"></i> 
                <span asp-validation-for="Password" class="error-message"></span> 
            </div>

            <div class="form-group password-group">
                <input type="password" asp-for="ConfirmPassword" placeholder="Repeat a password" required />
                <i class="far fa-eye-slash toggle-password" data-target="ConfirmPassword"></i> 
                <span asp-validation-for="ConfirmPassword" class="error-message"></span> 
            </div>

            
            <div class="form-group checkbox-group">
                <input type="checkbox" asp-for="TermsAccepted"  /> 
                <label asp-for="TermsAccepted">I agree to Dresley's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label> 
                <span asp-validation-for="TermsAccepted" class="text-danger error-message"></span> 
            </div>


            <button type="submit" class="btn-primary">Sign up</button>

            <p class="login-link">
                Already have an account? <a href="@Url.Action("Sign_In", "Teacher")">Sign in</a>
            </p>
        </form>
    </div>
</main>

@section Scripts {
    <script src="@Url.Content("~/JavaScript/teacher-sign-up.js")"></script>
}