@model StudentSettingsVM
@{
    Layout = "_Layout";
}
@section css {
    <link rel="stylesheet" href="/css/StudentTeacherSettings.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
<div class="main-content">
    <div class="settings-container">
        <h2>Account Settings</h2>

    <form id="settingsForm" asp-action="Settings" asp-controller="Student" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" asp-for="fullName" readonly class="readonly-field">
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" asp-for="email" readonly class="readonly-field">
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" asp-for="phone" placeholder="Enter phone number">
                <span asp-validation-for="phone" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label for="parentPhone">Parent's Phone Number</label>
                <input type="tel" id="parentPhone" asp-for="parentPhone" placeholder="Enter phone number">
                <span asp-validation-for="parentPhone" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="gradeLevel">Grade Level</label>
                <select id="gradeLevel" asp-for="gradeLevel" class="form-select">
                    <option value="6">Grade 6</option>
                    <option value="7">Grade 7</option>
                    <option value="8">Grade 8</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                    <option value="11">Grade 11</option>
                    <option value="12">Grade 12</option>
                </select>
                <span asp-validation-for="gradeLevel" class="text-danger"></span>

            </div>
            <div class="divider"></div>

            <h2>Change Password</h2>@*need to change id *@
            <div class="form-group password-group">
                <input type="password"
                       asp-for="CurrPassword"
                       id="current-password"
                       name="password"
                       placeholder="Current password"
                       required
                       minlength="8" />
                <i class="far fa-eye-slash toggle-password" data-target="current-password"></i>
                <span asp-validation-for="CurrPassword" class="error-message" id="password-error"></span>
            </div>

            <div class="form-group password-group">
                <input type="password" asp-for="password" id="password" name="password" placeholder="Create a password" minlength="8" />
                <i class="far fa-eye-slash toggle-password" data-target="password"></i>
                <span asp-validation-for="password" class="error-message" id="password-error"></span>
            </div>



            @*need to change name id="confirm-password" to "ConfirmPassword"*@
            <div class="form-group password-group">
                <input type="password" asp-for="ConfirmPassword" id="confirm-password" name="confirm-password" placeholder="Repeat a password" />
                <i class="far fa-eye-slash toggle-password" data-target="confirm-password"></i>
                <span asp-validation-for="ConfirmPassword" class=" error-message" id="confirm-password-error"></span>
            </div>

            <button type="submit" class="save-btn">Save Changes</button>
            <div style="clear: both;"></div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="/js/TogglePassword.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}