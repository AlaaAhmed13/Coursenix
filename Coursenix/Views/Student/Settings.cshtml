@model TeacherSettingsViewModel
@{
    Layout = "_Layout";
}
@section css {
    <link href="/css/student-settings.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="container">
    <h2>Account Settings</h2>

    <div class="settings-container">
        <form asp-action="Settings" method="post" asp-controller="Teacher" id="settingsForm">
            <asp-validation-summary class="text-danger" validation-summary="All"></asp-validation-summary>

            <div class="profile-section">
                <div class="form-section">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" asp-for="Name" id="fullName" name="fullName" class="form-group" placeholder="Enter full name">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" asp-for="PhoneNumber" id="phone" name="phone" class="form-group" placeholder="Enter phone number">
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" asp-for="Email" id="email" name="email" class="form-group" placeholder="Enter email address">
                    </div>
                </div>
                @* <div class="photo-section"> *@
                @*      <div class="profile-img">  *@
                @*          <img src="../assets/teacher1.svg" alt="Teacher Profile" class="teacher-image">  *@
                @*      </div>  *@
                @*     <input type="file" asp-for="ProfilePicture" hidden> *@
                @*     <button type="button" class="upload-btn"> *@
                @*         <span class="icon">📷</span> *@
                @*         Upload Photo *@
                @*     </button> *@
                @*     <p class="photo-info">Image size should be under 1MB and image ratio needs to be 1:1</p> *@
                @* </div> *@
            </div>

            <div class="form-group">
                <label for="bio" class="bio-label">Biography</label>
                <textarea asp-for="Biography" id="bio" name="bio" class="form-group" placeholder="Tell students a bit about yourself and your teaching approach (max 200 words)"></textarea>
            </div>

            <div class="divider"></div>

            <h2>Change Password</h2>

            <div class="form-group">
                <label for="current-password">Current Password</label>
                <div class="form-group password-group">
                    <input type="password" asp-for="CurrentPassword" id="current-password" name="current-password" class="form-group" placeholder="Current password" required minlength="8" />
                    <i class="far fa-eye-slash toggle-password" data-target="current-password"></i>
                    <span class="error-message" id="current-password-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="password">New Password</label>
                <div class="form-group password-group">
                    <input type="password" asp-for="NewPassword" id="password" name="new-password" class="form-group" placeholder="New password" minlength="8" />
                    <i class="far fa-eye-slash toggle-password" data-target="password"></i>
                    <span class="error-message" id="password-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="confirm-password">Confirm Password</label>
                <div class="form-group password-group">
                    <input type="password" asp-for="ConfirmPassword" id="confirm-password" name="confirm-password" class="form-group" placeholder="Confirm Password" />
                    <i class="far fa-eye-slash toggle-password" data-target="confirm-password"></i>
                    <span class="error-message" id="confirm-password-error"></span>
                </div>
            </div>

            <button type="submit" class="save-btn">Save Changes</button>
        </form>
    </div>
</div>

@section scripts {
    <script src="/js/student-settings.js"></script>
}