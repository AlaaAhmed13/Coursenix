@model StudentSettingsVM
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coursenix</title>
    <link rel="stylesheet" href="/CSS/student-settings.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<div class="main-content">
    <div class="settings-container">
        <h2>Account Settings</h2>

        <form id="settingsForm" asp-action="Settings" asp-controller="Student" method="post">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" asp-for="Name" placeholder="Enter your Full name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" asp-for="PhoneNumber" placeholder="Enter phone number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="parentPhone">Parent's Phone Number</label>
                <input type="tel" id="parentPhone" asp-for="ParentPhoneNumber" placeholder="Enter phone number" class="form-control" />
                <span asp-validation-for="ParentPhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="gradeLevel">Grade Level</label>
                <select asp-for="Grade" id="gradeLevel" class="form-select">
                    <option value="">-- Select Grade --</option>
                    <option value="6">Grade 6</option>
                    <option value="7">Grade 7</option>
                    <option value="8">Grade 8</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                    <option value="11">Grade 11</option>
                    <option value="12">Grade 12</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="divider"></div>

            <h2>Change Password</h2>

            <div class="form-group password-group">
                <input type="password"
                       id="current-password"
                       asp-for="CurrPassword"
                       placeholder="Current password"
                       class="form-control"
                       minlength="8" />
                <i class="far fa-eye-slash toggle-password" data-target="current-password"></i>
                <span asp-validation-for="CurrPassword" class="text-danger"></span>
            </div>

            <div class="form-group password-group">
                <input type="password"
                       id="password"
                       asp-for="NewPassword"
                       placeholder="Create a password"
                       class="form-control"
                       minlength="8" />
                <i class="far fa-eye-slash toggle-password" data-target="password"></i>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group password-group">
                <input type="password"
                       id="confirm-password"
                       asp-for="ConfirmPassword"
                       placeholder="Repeat a password"
                       class="form-control" />
                <i class="far fa-eye-slash toggle-password" data-target="confirm-password"></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="save-btn">Save Changes</button>
            <div style="clear: both;"></div>
        </form>
    </div>
</div>
