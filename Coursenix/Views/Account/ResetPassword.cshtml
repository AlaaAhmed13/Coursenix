@model ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dresley - Create New Password</title>
    <link rel="stylesheet" href="~/css/create_pass.css">
</head>
<body>
    <header>
        <div class="logo">
            <div class="logo-icon">D</div>
            <div class="logo-text">
                <div class="logo-name">Dresley</div>
                <div class="logo-tagline">Course Booking</div>
            </div>
        </div>
    </header>

    <main>
        <div class="password-form">
            <h1>Create New Password</h1>
            <p class="form-description">Your password must be different from previous used passwords.</p>

            <form asp-action="ResetPassword" method="post">
                <div class="input-group">
                    <input asp-for="Password" type="password" placeholder="Create a new password">
                    <div class="eye-icon">
                        <svg viewBox="0 0 24 24">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                </div>

                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm a new password">
                    <div class="eye-icon">
                        <svg viewBox="0 0 24 24">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="reset-btn">Reset Password</button>
                <br>
                <a href="#" class="back-link">Back</a>
            </form>
        </div>
    </main>


</body>
</html>
