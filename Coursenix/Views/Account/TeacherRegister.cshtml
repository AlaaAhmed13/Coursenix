@model RegisterUserViewModel 

@{
	ViewData["Title"] = "Teacher Sign Up";
	Layout = "_Layout";
}

@section Styles {
	<link rel="stylesheet" href="~/css/teacher-sign-up.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

    <!-- Header Section -->
    <header class="header">
        <div class="container">
            <div class="logo-container">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="/assets/logo.svg" alt="Coursenix Logo" />
                    <span>Coursenix</span>
                </a>
            </div>
            <nav class="navigation"></nav>
            <div class="sign-in-container">
                <a href="@Url.Action("Login", "Account")" class="btn sign-in-btn">Sign in</a>
            </div>
        </div>
    </header>

    <!-- form -->
    <main>
        <div class="form-container">
            <h1>Start your journey</h1>
            <p class="subtitle">Create your teacher account</p>

            <form asp-controller="Account" asp-action="Register" method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="RoleType" value="Teacher" />
                <div class="form-group">
                    <input asp-for="FullName" class="form-control" placeholder="Full name" minlength="3" />
                    <span asp-validation-for="FullName" class="error-message"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email address" />
                    <span asp-validation-for="Email" class="error-message"></span>
                </div>

                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                    <span asp-validation-for="PhoneNumber" class="error-message"></span>
                </div>

                <div class="form-group password-group">
                    <input asp-for="Password" class="form-control" placeholder="Create a password" />
                    <i class="far fa-eye-slash toggle-password" data-target="Password"></i>
                    <span asp-validation-for="Password" class="error-message"></span>
                </div>

                <div class="form-group password-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat a password" />
                    <i class="far fa-eye-slash toggle-password" data-target="ConfirmPassword"></i>
                    <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Biography" class="bio-label"></label>
                    <textarea asp-for="Biography"
                              class="form-control"
                              placeholder="Tell students a bit about yourself and your teaching approach (max 200 words)"
                              maxlength="1000"
                              required></textarea>
                    <div class="word-counter">
                        <span id="bio-word-count">0</span>/200 words
                    </div>
                    <span asp-validation-for="Biography" class="error-message"></span>
                </div>

                <div class="form-group checkbox-group">
                    <input asp-for="Terms" />
                    <label asp-for="Terms">
                        I agree to Dresley's <a href="#">Terms of Service</a> and
                        <a href="#">Privacy Policy</a>
                    </label>
                    <span asp-validation-for="Terms" class="error-message"></span>
                </div>

                <button type="submit" class="btn-primary">Sign up</button>

                <p class="login-link">
                    Already have an account? <a href="@Url.Action("Login", "Account")">Sign in</a>
                </p>
            </form>
        </div>
    </main>


 
    @section Scripts{
        <script src="/js/teaher-sign-up.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }