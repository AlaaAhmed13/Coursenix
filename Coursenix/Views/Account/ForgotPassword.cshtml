@model ForgotPasswordViewModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dresley - Forgot Password</title>
    <link rel="stylesheet" href="../CSS/forget_pass.css">
</head>
<form asp-action="ForgotPassword" asp-controller="Account" method="post">
    <div class="main-content">
        <div class="forgot-card">
            <h1>Forgot Password</h1>
            <p>Enter your email address and we'll send you a link to reset your password.</p>

            <input type="email" 
                   class="email-input" 
                   placeholder="Enter your email address"
                   asp-for="Email"
                   id="email-input" />

            <span asp-validation-for="Email" class="text-danger"></span>

            <button type="submit" class="send-btn">Send</button>
            <a asp-action="Register" asp-controller="Account" class="back-link">Back to Sign in</a>
        </div>
    </div>
</form>
