@model VerifyCodeViewModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dresely Course Booking - Email Verification</title>
    <link rel="stylesheet" href="../CSS/check_your_email.css">
</head>
<form asp-action="CheckYourEmail" asp-controller="Account" method="post">
    <div class="content">
        <h1>Check Your Email</h1>
        <p>We've sent a verification code to your email address. Please enter the code below to continue.</p>

        <div class="code-inputs">
            <input type="text" maxlength="1" class="code-input" asp-for="Digit1" id="digit1" name="digit1" />
            <input type="text" maxlength="1" class="code-input" asp-for="Digit2" id="digit2" name="digit2" />
            <input type="text" maxlength="1" class="code-input" asp-for="Digit3" id="digit3" name="digit3" />
            <input type="text" maxlength="1" class="code-input" asp-for="Digit4" id="digit4" name="digit4" />
            <input type="text" maxlength="1" class="code-input" asp-for="Digit5" id="digit5" name="digit5" />
            <input type="text" maxlength="1" class="code-input" asp-for="Digit6" id="digit6" name="digit6" />
        </div>

        <span asp-validation-summary="ModelOnly" class="text-danger"></span>

        <button type="submit" class="verify-btn">Verify code</button>

        <div>
            Didn't receive a code? <span class="resend-link">Resend Code</span>
        </div>

        <a asp-action="ForgotPassword" asp-controller="Account" class="back-link">Back</a>
    </div>
</form>
